{
  "name": "@celo/ganache-core",
  "version": "2.10.3",
  "main": "./index.js",
  "types": "./typings/index.d.ts",
  "engines": {
    "node": ">=8.9.0"
  },
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "_mocha": "mocha --check-leaks --recursive --globals _scratch --opts ./test/.mocharc",
    "nyc_mocha": "nyc npm run _mocha",
    "_lint": "eslint --ignore-path .gitignore .",
    "build": "webpack-cli --config ./webpack/node/core.webpack.config.js",
    "build-web": "webpack-cli --config ./webpack/web-experimental/core.webpack.config.js",
    "format": "prettier --write \"{lib,perf,test}/**/*.js\" && eslint --fix --ignore-path .gitignore .",
    "prepublishOnly": "npm run test && npm run build && npm run test-build && cp npm-shrinkwrap.json npm-shrinkwrap.json.bak && rm -rf node_modules/web3-providers-ws/node_modules/websocket/.git && npm prune --only=prod",
    "postpublish": "rm npm-shrinkwrap.json && mv npm-shrinkwrap.json.bak npm-shrinkwrap.json && npm ci",
    "test": "npm run _lint && npm run nyc_mocha",
    "test-build": "cross-env TEST_BUILD=node npm run _mocha",
    "test-web-experimental": "cross-env TEST_BUILD=web-experimental npm run _mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "husky install"
  },
  "dependencies": {
    "@celo/utils": "2.2.0",
    "@ethereumjs/block": "4.0.0",
    "@ethereumjs/common": "3.0.0",
    "@ethereumjs/tx": "4.0.0",
    "abstract-leveldown": "7.2.0",
    "async": "3.2.4",
    "bip39": "3.0.4",
    "cachedown": "1.0.0",
    "clone": "2.1.2",
    "debug": "4.3.4",
    "encoding-down": "7.1.0",
    "eth-sig-util": "3.0.1",
    "ethereumjs-abi": "0.6.8",
    "ethereumjs-account": "3.0.0",
    "ethereumjs-util": "7.1.5",
    "ethereumjs-vm": "git+https://github.com/celo-org/celo-monorepo.git#ethereumjs-vm-v4.1.3-celo3-gitpkg",
    "ethereumjs-wallet": "1.0.2",
    "heap": "0.2.7",
    "level-sublevel": "6.6.5",
    "levelup": "5.1.1",
    "lodash": "4.17.21",
    "merkle-patricia-tree": "4.2.4",
    "seedrandom": "3.0.5",
    "source-map-support": "0.5.21",
    "tmp": "0.2.1",
    "web3-provider-engine": "16.0.4",
    "websocket": "1.0.34"
  },
  "devDependencies": {
    "assert-match": "^1.1.1",
    "browserfs": "1.4.3",
    "coveralls": "^3.0.9",
    "cross-env": "7.0.3",
    "eslint": "8.24.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-standard": "5.0.0",
    "ethers": "5.7.1",
    "husky": "^8.0.0",
    "js-scrypt": "0.2.0",
    "lint-staged": "13.0.3",
    "memdown": "6.1.1",
    "mocha": "10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "number-to-bn": "1.7.0",
    "nyc": "^15.0.0",
    "pify": "6.1.0",
    "portfinder": "^1.0.25",
    "prettier": "^2.7.1",
    "request": "^2.88.0",
    "semver": "7.3.7",
    "solc": "0.8.17",
    "temp": "0.9.4",
    "terser-webpack-plugin": "5.3.6",
    "web3": "1.8.0",
    "webpack": "5.74.0",
    "webpack-bundle-size-analyzer": "3.1.0",
    "webpack-cli": "4.10.0"
  },
  "optionalDependencies": {
    "web3": "1.8.0"
  },
  "resolutions": {
    "**/ethereumjs-vm": "git+https://github.com/celo-org/celo-monorepo.git#ethereumjs-vm-v4.1.3-celo3-gitpkg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/celo-org/ganache-core"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix --ignore-path .gitignore",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "extends": "standard",
    "rules": {
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "max-len": [
        "error",
        120,
        {
          "ignoreRegExpLiterals": true
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "wrap-iife": [
        "error",
        "outside"
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "arrowParens": "always"
  }
}
